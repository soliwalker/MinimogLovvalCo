            $('#'+$offset.data('id')).toggleClass('fixed', $(window).scrollTop() >= offsetBottom);
            $('body').css('padding-bottom', $('.so-btn-add-to-cart-wrap.fixed').outerHeight());
        });
      });
    }

    document.addEventListener('shopify:section:load', initForm);

  }(jQuery));
});
