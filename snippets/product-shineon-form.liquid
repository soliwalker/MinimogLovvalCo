            {
              showHelper(e, allowedSymbols, tooltipElem);
            }
          }
          else if(!threeHeartsVariant)
          {
            $(tooltipElem).hide();
          }
        }

        function removeSpaceSWH(e)
        {
          e.currentTarget.value = "";
